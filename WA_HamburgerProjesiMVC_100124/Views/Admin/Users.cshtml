@model IEnumerable<WA_HamburgerProjesiMVC_100124.Models.UserListVM>

@{
    ViewData["Title"] = "Users";
    Layout = "AdminLayout_";
}

<h1>Users</h1>
<br />

<table class="table ">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="text-center"> Process </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td> @i </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @{
                        if (item.Status == Domain.Enums.Status.Active)
                        {
                            <span class="text-success">@item.Status</span>
                        }
                        else
                        {
                            <span class="text-danger">@item.Status</span>
                        }
                    }
                </td>
              
                <td>
                    <span class="d-flex justify-content-center align-items-center">
                        @Html.ActionLink("Active / Passive", "UserChangeStatus", new {  email=item.Email }, new { @class = "btn btn-sm btn-outline-info" })  &nbsp;&nbsp;&nbsp
                        @Html.ActionLink("Orders", "UserDetails", new {  email=item.Email }, new { @class = "btn btn-sm btn-outline-warning" })
                    </span>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
