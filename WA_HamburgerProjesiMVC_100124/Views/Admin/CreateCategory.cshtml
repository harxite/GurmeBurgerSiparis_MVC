@model WA_HamburgerProjesiMVC_100124.Models.CreateCategoryVM

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "AdminLayout_";
}

<h1>Category</h1>

<h4>Create New Category</h4>
<hr />

@if (TempData["message"] != null)
{
    <div class="alert alert-success" role="alert">
        <text> @TempData["message"] </text>
    </div>
}

<br /><br />

<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CreateCategory">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-3 col-form-label">Category Name</label>
                            <div class="col-sm-6">
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

