@model IEnumerable<WA_HamburgerProjesiMVC_100124.Models.ContactVm>

@{
    ViewData["Title"] = "Messages";
    Layout = "~/Views/Shared/AdminLayout_.cshtml";
}

<h1>Messages</h1>

<table class="table">
    <thead>
        <tr>
            <th> # </th>
            <th>First Name</th>
            <th>Last Name</th>
            <th> Email </th>
            <th> Date </th>
            <th> Title </th>
            <th>Process</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td> @i </td>
                <td> @item.User.FirstName </td>
                <td> @item.User.LastName </td>
                <td> @item.User.Email </td>
                <td> @item.Message.CreatedDate </td>
                <td> @item.Message.Name </td>
                <td>
                    <a asp-action="MessageDetails" asp-route-id="@item.Message.Id"> <i class="mdi mdi-email-variant icon-md text-primary"></i></a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
